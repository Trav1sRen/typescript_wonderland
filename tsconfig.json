{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "build",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "mocha",
      "webdriverio",
      "chai"
    ],
    "include": [
      "./test/**/*.ts",
      "./src/**/*.ts"
    ]
  }
}
